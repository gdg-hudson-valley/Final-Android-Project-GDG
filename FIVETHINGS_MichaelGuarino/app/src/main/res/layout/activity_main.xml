<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.fivethings_michaelguarino.MainActivity">


    <!--TODO IMPLEMENT A TOAST THAT WILL CALCULATE EVERYTHING AND SHOW BMI AT THE END-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Prompt user for name-->
        <!-- TODO actionbar blocks name input-->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorOne"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_namePrompt" />

                <EditText
                    android:id="@+id/user_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="John Doe"
                    android:inputType="textCapWords" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_namePromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!-- Prompt user for email address-->
        <!-- TODO force using into entering email with set @ symbol-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorThree"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_emailPrompt" />

                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="JohnDoe@gmail.com"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_emailPromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Prompt user for Age(Thing 1)-->
        <!-- TODO MAKE FRAGMENT SO USER ENTERS INFO IN POPUP-->
        <!-- TODO find out how to have user enter DOB using a calender-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorTwo"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_agePrompt" />

                <EditText
                    android:id="@+id/user_age"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="21"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_agePromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/WHY_Age"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Prompt user for biological gender (Thing 2)-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorOne"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_genderPrompt" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_female" />
                    <!--android:onClick="onRadioButtonClicked"-->
                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender_male" />
                    <!--android:onClick="onRadioButtonClicked"-->
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_genderPromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/WHY_Gender"
                    android:textAppearance="@style/InputDescriptionText" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Prompt user for Height (Thing 3)-->
        <!-- TODO MAKE FRAGMENT SO USER ENTERS INFO IN POPUP-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorThree"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_heightPrompt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/height_ft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="5"
                        android:inputType="number" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:layout_marginLeft="8dp"
                        android:text="@string/height_unit" />

                    <EditText
                        android:id="@+id/height_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:hint="8"
                        android:inputType="number" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/height_unit_two" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/WHY_Height"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Prompt user for Current weight (Thing 4)-->
        <!-- TODO MAKE FRAGMENT SO USER ENTERS INFO IN POPUP-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorTwo"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:gravity="top|left"
                    android:text="@string/user_weightPrompt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/user_weight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="150"
                        android:inputType="numberDecimal" />

                    <TextView
                        style="@style/HeaderTextStyle"
                        android:layout_marginLeft="8dp"
                        android:text="@string/weight_unit" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_weightPromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/WHY_Weight"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- TODO make a help strategy to give more information to help the user decide what their activity level is -->
        <!-- Prompt user for activity level (Thing 5)-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activityLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorOne"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:text="@string/user_activityLevelPrompt" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_activityLevel_L1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activityLevel_value1" />
                    <!--android:onClick="onRadioButtonClicked"-->
                    <RadioButton
                        android:id="@+id/radio_activityLevel_L2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activityLevel_value2" />
                    <!--android:onClick="onRadioButtonClicked"-->
                    <RadioButton
                        android:id="@+id/radio_activityLevel_L3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activityLevel_value3" />
                    <!--android:onClick="onRadioButtonClicked"-->
                    <RadioButton
                        android:id="@+id/radio_activityLevel_L4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activityLevel_value4" />
                    <!--android:onClick="onRadioButtonClicked"-->

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/user_activityLevelPromptTwo"
                    android:textAppearance="@style/InputDescriptionText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/WHY_PhysicalActivity"
                    android:textAppearance="@style/InputDescriptionText" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:background="@color/colorFour"
            android:onClick="calculate"
            android:text="Calculate" />

    </LinearLayout>
</ScrollView>
